#include<stdio.h>
main()
{
	printf("Menu that we offer : \n1. Pizza\n2. Burger\n3. Pasta\n4. French Fries\n5. Sandwich\n Please enter respective number of the food item you want to order :  ");
	int choice=0;
	scanf("%d",&choice);
	printf("\n");
	switch(choice)
	{
		case 1:
			printf("Food item-Pizza\n Price - Rs 239");
			break;
		case 2:
			printf("Food item-Burger\n Price - Rs 129");
			break;
		case 3:
			printf("Food item-Pasta\n Price - Rs 179");
			break;
		case 4:
			printf("Food item-French Fries\n Price - Rs 99");
			break;
		case 5:
			printf("Food item-Sandwich\n Price - Rs 149");
			break;
		default : printf("input you entered is invalid.\n Please try with a valid input");
	}
}
